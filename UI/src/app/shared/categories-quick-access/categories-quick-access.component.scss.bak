.clients-carousel {
    position: relative;
    padding: 8px 0;
    margin-top: 30px;
    margin-bottom: 20px;

    .swiper-container {
        padding: 8px 2px;
        margin: 0 14px;

        .client-item {
            height: 130px;
            display: flex;
            align-items: center;
            cursor: pointer;
            opacity: .75;
            
            &:hover {
                opacity: 1;
            }

            img {
                max-width: 100%;
                max-height: 100%;
                margin: 0 auto;
            }

            p span.show-title {
                // visibility: hidden;
                text-align: center;
            }

            :hover span.show-title {
                visibility: visible;
            }
        }
    }
}