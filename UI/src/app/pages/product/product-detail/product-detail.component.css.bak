#infoPack.table-striped>tbody>tr:nth-of-type(odd) {
  background-color: white;
}

.tooltip {
  position: relative;
  display: inline-block;
}

.tooltip .tooltiptext {
  visibility: hidden;
  width: 80px;
  background-color: black;
  color: #fff;
  text-align: center;
  border-radius: 6px;

  /* Position the tooltip */
  top: 100%;
  left: 50%;
  margin-left: -60px;
  position: absolute;
  z-index: 1100;
}

.tooltip:hover .tooltiptext {
  visibility: visible;
}

.swiper-slide {
  text-align: center;
}

mat-card.main-carousel-container .swiper-slide img {
  max-width: 100%;
  max-height: 100%;
}
.p-ellipsis{
  display:inline-block;
  height:140px;
  overflow:hidden !important;
  text-overflow: ellipsis;
  background: linear-gradient(to bottom,
      black 80%,
      white);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.sticky-mat-sidenav{
  position: fixed;
  transition: top .27s ease-out;
  height: 480px !important;
  width: min-content;
}
.small-carousel-image {
  width: 313px;
  height: 155px;
  object-fit: cover;
}
