.main-carousel{ 
    .swiper-slide{              
        text-align: center;
        padding-bottom: 66.25%;
        position: relative;
        overflow: hidden;  
        background: rgba(0, 0, 0, 0.04);         
    }
    img{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: auto;
        max-width: 100%;
    } 
    .control-icons{ 
        position: absolute;
        z-index: 2; 
        top: 24px;
        right: 20px;
        button.mat-button{
            min-width: 36px;
            width: 36px;
            padding: 0;
            margin: 0 4px;
            background: rgba(255, 252, 252, 0.6);
            transition: 0.2s; 
            color:rgba(0, 0, 0, 0.87);
            &:disabled{
                color: rgba(0, 0, 0, 0.26); 
            }
            &:hover:enabled{
                background: rgba(255, 252, 252, 1);
            }             
        }
    }
}
.small-carousel{ 
    .swiper-slide{  
        img{
            display: block;
            opacity: 0.3;
        }
        &.active-thumb{
            img{ 
                border-width: 3px;
                border-style: solid;
                box-sizing: border-box;
                opacity: 1;
            }           
        } 
        .swiper-lazy-preloader{
            margin-top: 10px;
        }        
    } 
}
 
.widget{ 
    margin-bottom: 40px;
    .widget-title{
        margin: 0 -16px 16px;
        padding: 8px 16px;
        text-transform: uppercase;
        font-weight: 500;
    }
    &:first-child{  
        .widget-title{
            margin: -16px -16px 16px;
            padding: 8px 16px;
            text-transform: uppercase;
            font-weight: 500;
        }
    } 
} 
.gallery-thumbs {
    display: inline-block;
    margin: 1.6em 0 1.6em -2.5%;
    width: 102.5%;
    list-style: none;
}
.gallery-thumbs-item {
    float: left;
    margin: 0 0 1em 2.5%;
    width: 17.5%;
    position: relative;
    height: 0;
    padding-top: 17.5%;
}
.gallery-thumbs-link {
    cursor: -webkit-zoom-in;
    display: block;
    position: absolute;
    height: 100%;
    left: 0;
    top: 0;
    right: 0;
}

.p-ellipsis{
    display:inline-block;
    height:140px;
    overflow:hidden !important;
    text-overflow: ellipsis;
    background: linear-gradient(to bottom,
        black 80%,
        white);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .sticky-mat-sidenav{
    position: fixed;
    transition: top .27s ease-out;
    height: 480px !important;
  }

  .small-carousel-image {
    width: 313px;
    height: 155px;
    object-fit: cover;
  }